<div class="container movie">
    <div class="movie-data row">
        <div class="col-sm-5">
            <div class="movie-imgWrap">
                <img src=<%= img %> alt="" class="movie-img" >
            </div>
        </div>
        <div class="col-sm-7">
            <h1 class="movie-tit">
                <%= name %>
                <a href=<%= alt %> class="movie-tit-link"  >去豆瓣看看 ></a>
            </h1>
            <ul class="movie-dataList">
                <li class="movie-dataItem">
                    <span class="movie-dataItem-key">性别:</span>
                    <span class="movie-dataItem-value">
                        <%= gender %>
                    </span>
                </li>
                <li class="movie-dataItem">
                    <span class="movie-dataItem-key">英文名:</span>
                    <span class="movie-dataItem-value">
                        <%= name_en %>
                    </span>
                </li>
                <li class="movie-dataItem">
                    <span class="movie-dataItem-key">出生地:</span>
                    <span class="movie-dataItem-value">
                        <%= born_place %>
                    </span>
                </li>
                <li class="movie-dataItem">
                    <span class="movie-dataItem-key">其他中文名:</span>
                    <span class="movie-dataItem-value">
                        <%= aka %>
                    </span>
                </li>
                <li class="movie-dataItem">
                    <span class="movie-dataItem-key">其他英文名:</span>
                    <span class="movie-dataItem-value">
                        <%= aka_en %>
                    </span>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="works-header">
        <h3 class="works-header-tit">代表作: </h3>
        <a href='<%="search.html?q="+name%>' class="works-header-more">更多 ></a>
    </div>
    
    <div class="row">
        <%=  movieCard %>
    </div>
</div>